<script language="JScript">
	var ws = new ActiveXObject("WScript.Shell");
	var regRoot = "HKLM\\SOFTWARE\\Microsoft\\NET Framework Setup\\NDP\\";

	v45 = checkKey(regRoot+"v4\\Full\\Release"); // v4.5以降のVersionならReleaseエントリが正常に読める
	
	if (v45) {
		// V45インストール済の時は need-v45 メッセージを削除
		$(function () { $("#need-v45").remove(); });
	}
	else {
		// V45がインストールされてない時は have-v45 メッセージを削除
		$(function () { $("#have-v45").remove(); });
	}

	//レジストリキーの内容を確認
	function checkKey(key)
	{
		try
		{
			if(ws.RegRead(key) > 0)
				return true;
		}
		catch(e)
		{
			return false;
		}
		return false;
	}
</script>
